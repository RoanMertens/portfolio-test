<div id="index-modal">
  <div class="title">
    <h2>Projects</h2>
  </div>
  <div class="padded">
    <div class="row">
      <% @projects.each do |project| %>
       <div class="col-xs-12 col-sm-6 col-md-4">
          <%= link_to project_path(project), remote: true do %>
            <div class="card" style="background-image: url(<%= image_path(project.image_url) %>)">
              <div class="card-description">
                <h2><%= project.name %></h2>
                <p><%= project.blurb.first(80) %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
